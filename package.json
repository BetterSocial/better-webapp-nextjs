{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "dev:up": "docker-compose --env-file .env.local -f docker-compose.dev.yaml up --build",
    "dev:start": "docker-compose --env-file .env.local -f docker-compose.dev.yaml start",
    "dev:stop": "docker-compose -f docker-compose.dev.yaml stop",
    "dev:down": "docker-compose -f docker-compose.dev.yaml down",
    "prod:up": "docker-compose --env-file .env.prod -f docker-compose.prod.yaml up -d --build",
    "prod:start": "docker-compose --env-file .env.prod -f docker-compose.prod.yaml up -d",
    "prod:down": "docker-compose -f docker-compose.prod.yaml down",
    "staging:up": "docker-compose --env-file .env.staging -f docker-compose.staging.yaml up -d --build",
    "staging:start": "docker-compose --env-file .env.staging -f docker-compose.staging.yaml up -d",
    "staging:stop": "docker-compose -f docker-compose.staging.yaml stop",
    "staging:down": "docker-compose -f docker-compose.staging.yaml down",
    "start": "next start -p $PORT",
    "lint": "next lint",
    "env:dev": "doppler secrets download -p bettersocial-webapp --no-file --format env-no-quotes --config dev > .env.local",
    "env:staging": "doppler secrets download -p bettersocial-webapp --no-file --format env-no-quotes --config stg > .env.staging",
    "env:prod": "doppler secrets download -p bettersocial-webapp --no-file --format env-no-quotes --config prd > .env.prod"
  },
  "dependencies": {
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tanstack/react-query": "^5.8.1",
    "axios": "^1.6.0",
    "firebase-dynamic-links": "^1.1.1",
    "getstream": "^8.1.0",
    "js-cookie": "^3.0.5",
    "moment": "^2.29.4",
    "next": "latest",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "react": "^18.2.0",
    "react-device-detect": "^2.2.2",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-loader-spinner": "^5.4.5",
    "react-string-replace": "^1.1.0",
    "react-toastify": "^9.1.1",
    "react-toggle": "^4.1.3",
    "sequelize": "^6.28.0",
    "ua-parser-js": "^1.0.33"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "@types/react": "18.2.55",
    "@types/react-toggle": "^4.0.5",
    "autoprefixer": "^10.4.13",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.5",
    "postcss": "^8.4.21",
    "sequelize-cli": "^6.6.0",
    "tailwindcss": "^3.2.4",
    "typescript": "5.2.2"
  }
}
